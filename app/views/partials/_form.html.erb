<div class="article" ng-show="state=='init'">
  <form name="summary" ng-submit="onSubmit()" class="form-horizontal">
    <div class="form-group">
      <label for="title">Article title</label>
      <input id="title" class="form-control" type="text" placeholder="Title" ng-model="article.title" required>
    </div>
    <div class="form-group">
      <label for="article">Article content</label>
      <textarea id="article" class="form-control" rows="10" placeholder="Text..." ng-model="article.content" required></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn">Summarize</button>
    </div>
  </form>
</div>